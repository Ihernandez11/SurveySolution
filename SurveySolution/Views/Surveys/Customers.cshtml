@model SurveySolution.Models.ViewModels.SurveyCustomerViewModel

@{
    ViewBag.Title = "Customers";
}

<h2>@Html.DisplayNameFor(model => model.SurveyName)</h2>

<table class="table">
    <tr>
        <th>
            Select
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email Address
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Customers)
    {
    <tr>
        <td>
            @Html.CheckBox("Select")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
    </tr>
    }

</table>

